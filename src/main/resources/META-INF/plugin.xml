<idea-plugin url="https://github.com/RonWalker22/VoiceJump">
  <name>VoiceJump</name>
  <id>VoiceJump</id>

  <description><![CDATA[
    Manipulate code with your voice. A poor man's <a href="https://github.com/pokey/cursorless-vscode">Cursorless</a>.
    Based off of <a href="https://github.com/acejump/AceJump">AceJump</a>.
    ]]>
  </description>

  <depends>com.intellij.modules.platform</depends>

  <category>Navigation</category>
  <vendor url="https://github.com/RonWalker22/VoiceJump">RonWalker22</vendor>

  <extensions defaultExtensionNs="com.intellij">
    <applicationService serviceImplementation="org.voicejump.config.AceConfig"/>
    <applicationConfigurable groupId="tools" displayName="VoiceJump"
                             instance="org.voicejump.config.AceConfigurable"
                             id="preferences.AceConfigurable" dynamic="true"/>
    <editorActionHandler action="EditorEscape" order="first"
                         implementationClass="org.voicejump.action.AceEditorAction$Reset"/>
    <editorActionHandler action="EditorBackSpace" order="first"
                         implementationClass="org.voicejump.action.AceEditorAction$ClearSearch"/>
    <editorActionHandler action="EditorStartNewLine" order="first"
                         implementationClass="org.voicejump.action.AceEditorAction$SelectBackward"/>
    <editorActionHandler action="EditorEnter" order="first"
                         implementationClass="org.voicejump.action.AceEditorAction$SelectForward"/>
    <editorActionHandler action="EditorTab" order="first"
                         implementationClass="org.voicejump.action.AceEditorAction$ScrollToNextScreenful"/>
    <editorActionHandler action="EditorUnindentSelection" order="first"
                         implementationClass="org.voicejump.action.AceEditorAction$ScrollToPreviousScreenful"/>

  </extensions>

  <actions>
    <action id="AceAction"
            class="org.voicejump.action.AceAction$ActivateOrCycleMode"
            text="Activate / Cycle VoiceJump Mode">
      <keyboard-shortcut keymap="Mac OS X" first-keystroke="ctrl SEMICOLON"/>
      <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="ctrl SEMICOLON"/>
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl SEMICOLON"/>
    </action>
    <action id="AceReverseAction"
            class="org.voicejump.action.AceAction$ActivateOrReverseCycleMode"
            text="Activate / Reverse Cycle VoiceJump Mode"/>
    <action id="AceWordStartAction"
            class="org.voicejump.action.AceAction$ToggleJumpMode"
            text="Start VoiceJump in Jump Mode"/>
    <action id="AceWordEndAction"
            class="org.voicejump.action.AceAction$ToggleJumpEndMode"
            text="Start VoiceJump in Jump End Mode"/>
    <action id="AceTargetAction"
            class="org.voicejump.action.AceAction$ToggleTargetMode"
            text="Start VoiceJump in Target Mode"/>
    <action id="AceDeclarationAction"
            class="org.voicejump.action.AceAction$ToggleDeclarationMode"
            text="Start VoiceJump in Declaration Mode"/>
    <action id="AceJumpStartMode" class="org.voicejump.action.AceAction$ToggleJumpStartMode" text="Ace Jump Start Mode"/>
    <action id="ToggleChuckMode"
            class="org.voicejump.action.AceAction$ToggleChuckMode"
            text="ToggleChuckMode"/>
  </actions>
</idea-plugin>
